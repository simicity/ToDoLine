<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/whole_area"
    android:padding="20dp"
    android:id="@+id/add_layout"
    android:focusableInTouchMode="true">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Task (*)"
        android:textColor="#181619"
        android:textSize="20dp"
        android:id="@+id/tv_task"
        android:layout_alignParentStart="true"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#181619"
        android:textSize="16dp"
        android:id="@+id/edit_task"
        android:layout_below="@+id/tv_task"
        android:maxLength="30"
        android:minLines="1"
        android:padding="10dp"
        android:layout_marginTop="3dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/edit_area"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Memo"
        android:textColor="#181619"
        android:textSize="20dp"
        android:id="@+id/tv_memo"
        android:layout_below="@+id/edit_task"
        android:layout_alignParentStart="true"
        android:layout_marginTop="15dp"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#181619"
        android:textSize="16dp"
        android:id="@+id/edit_memo"
        android:layout_below="@+id/tv_memo"
        android:maxLength="140"
        android:minLines="4"
        android:padding="10dp"
        android:layout_marginTop="3dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:gravity="top|left"
        android:background="@drawable/edit_area"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Time"
        android:textColor="#181619"
        android:textSize="20dp"
        android:id="@+id/tv_time"
        android:layout_below="@+id/edit_memo"
        android:layout_alignParentStart="true"
        android:layout_marginTop="15dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00 : 00"
        android:textColor="#181619"
        android:textSize="18dp"
        android:id="@+id/edit_time"
        android:layout_below="@+id/tv_time"
        android:layout_alignParentStart="true"
        android:padding="10dp"
        android:layout_marginTop="3dp"
        android:background="@drawable/edit_area"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_back"
        android:textColor="#181619"
        android:id="@+id/btn_back"
        android:layout_toStartOf="@+id/btn_save"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/btn_back"
        android:layout_below="@+id/edit_time" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_save"
        android:textColor="#181619"
        android:id="@+id/btn_save"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/btn_save"
        android:layout_below="@+id/edit_time" />

</RelativeLayout>